<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.reading.start.tests.test_parent_child_play.ui.views.AutoFitTextureView
            android:id="@+id/texture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <ImageButton
            android:id="@+id/button_start"
            style="@style/test_parent_child_play_ButtonGeneral"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/test_parent_child_play_test_instruction_layout_margin_bottom"
            android:layout_marginTop="@dimen/test_parent_child_play_test_instruction_button_margin_top"
            android:gravity="center" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_margin="16dp"
            android:textColor="@color/test_parent_child_play_color_text"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/button_stop"
            style="@style/test_parent_child_stop_ButtonGeneral"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/test_parent_child_play_test_instruction_layout_margin_bottom"
            android:layout_marginTop="@dimen/test_parent_child_play_test_instruction_button_margin_top"
            android:gravity="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="@dimen/test_parent_child_play_button_general_width"
            android:layout_height="@dimen/test_parent_child_play_button_general_height"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/test_parent_child_play_test_instruction_layout_margin_bottom"
            android:layout_marginTop="@dimen/test_parent_child_play_test_instruction_button_margin_top"
            android:gravity="center"
            android:src="@drawable/actionbar_back_button" />
    </RelativeLayout>

</layout>
