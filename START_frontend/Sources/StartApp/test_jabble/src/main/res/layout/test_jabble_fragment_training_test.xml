<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.reading.start.tests.test_jabble.ui.fragments.OldTrainingJabbleTestFragment">

        <include
            android:id="@+id/action_bar"
            layout="@layout/test_jabble_action_bar" />

        <RelativeLayout
            android:id="@+id/bubbles_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/test_jabble_training_layout_margin"
            android:layout_weight="1"
            android:animateLayoutChanges="false"
            android:background="@drawable/card_background_border"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/bubble_background" />

            <ImageView
                android:id="@+id/image_bubble1"
                android:layout_width="@dimen/test_jabble_bubble_width"
                android:layout_height="@dimen/test_jabble_bubble_height"
                android:clickable="true"
                android:padding="@dimen/test_jabble_bubble_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/image_bubble_1"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/image_bubble2"
                android:layout_width="@dimen/test_jabble_bubble_width"
                android:layout_height="@dimen/test_jabble_bubble_height"
                android:clickable="true"
                android:padding="@dimen/test_jabble_bubble_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/image_bubble_2"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/image_bubble3"
                android:layout_width="@dimen/test_jabble_bubble_width"
                android:layout_height="@dimen/test_jabble_bubble_height"
                android:clickable="true"
                android:padding="@dimen/test_jabble_bubble_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/image_bubble_3"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/image_bubble4"
                android:layout_width="@dimen/test_jabble_bubble_width"
                android:layout_height="@dimen/test_jabble_bubble_height"
                android:clickable="true"
                android:padding="@dimen/test_jabble_bubble_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/image_bubble_4"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/image_bubble5"
                android:layout_width="@dimen/test_jabble_bubble_width"
                android:layout_height="@dimen/test_jabble_bubble_height"
                android:clickable="true"
                android:padding="@dimen/test_jabble_bubble_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/image_bubble_5"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/image_bubble6"
                android:layout_width="@dimen/test_jabble_bubble_width"
                android:layout_height="@dimen/test_jabble_bubble_height"
                android:clickable="true"
                android:padding="@dimen/test_jabble_bubble_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/image_bubble_6"
                android:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/test_jabble_instruction"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/button_start"
                style="@style/test_jabble_ButtonGeneral"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</layout>
