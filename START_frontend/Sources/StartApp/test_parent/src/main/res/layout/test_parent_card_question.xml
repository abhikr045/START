<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <View
                android:id="@+id/progress_1"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/test_parent_color_progress" />

            <View
                android:id="@+id/progress_2"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/test_parent_color_progress" />
        </LinearLayout>

        <ImageView
            android:id="@+id/questionState"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@drawable/question_done" />

        <TextView
            android:id="@+id/questionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1"
            android:textColor="@color/test_parent_color_text"
            android:textSize="@dimen/test_parent_card_video_question_title_margin_top" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/test_parent_card_question_layout_margin"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginEnd="@dimen/test_parent_card_question_text_margin_start_end"
            android:layout_marginStart="@dimen/test_parent_card_question_text_margin_start_end"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/test_parent_card_question_text_text_size" />

        <RadioGroup
            android:id="@+id/buttons_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/test_parent_card_question_button_margin"
            android:gravity="center"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/case_1"
                style="@style/test_parent_ButtonQuestionTop"
                android:layout_gravity="center"
                android:button="@null"
                android:gravity="center"
                android:text="@string/test_parent_card_question_button_always"
                android:textColor="@drawable/radio_button_text_menu"
                android:textSize="@dimen/test_parent_text_size_general" />

            <RadioButton
                android:id="@+id/case_2"
                style="@style/test_parent_ButtonQuestionMiddle"
                android:layout_gravity="center"
                android:button="@null"
                android:gravity="center"
                android:text="@string/test_parent_card_question_button_sometimes"
                android:textColor="@drawable/radio_button_text_menu"
                android:textSize="@dimen/test_parent_text_size_general" />

            <RadioButton
                android:id="@+id/case_3"
                style="@style/test_parent_ButtonQuestionMiddle"
                android:layout_gravity="center"
                android:button="@null"
                android:gravity="center"
                android:text="@string/test_parent_card_question_button_rarely"
                android:textColor="@drawable/radio_button_text_menu"
                android:textSize="@dimen/test_parent_text_size_general" />

            <RadioButton
                android:id="@+id/case_4"
                style="@style/test_parent_ButtonQuestionBottom"
                android:layout_gravity="center"
                android:button="@null"
                android:gravity="center"
                android:text="@string/test_parent_card_question_button_never"
                android:textColor="@drawable/radio_button_text_menu"
                android:textSize="@dimen/test_parent_text_size_general" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>