<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/test_parent_actionbar_height"
    android:background="@color/test_parent_color_main_view"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="@dimen/test_parent_actionbar_button_width"
                android:layout_height="@dimen/test_parent_actionbar_button_height"
                android:layout_marginStart="@dimen/test_parent_actionbar_button_margin"
                android:scaleType="fitCenter"
                android:src="@drawable/actionbar_back_button"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/record_button"
                android:layout_width="@dimen/test_parent_actionbar_button_width"
                android:layout_height="@dimen/test_parent_actionbar_button_height"
                android:layout_marginStart="@dimen/test_parent_actionbar_button_margin"
                android:scaleType="fitCenter"
                android:src="@drawable/actionbar_record_button"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/home_button"
                android:layout_width="@dimen/test_parent_actionbar_button_width"
                android:layout_height="@dimen/test_parent_actionbar_button_height"
                android:layout_marginStart="@dimen/test_parent_actionbar_button_margin"
                android:scaleType="fitCenter"
                android:src="@drawable/actionbar_home_button"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_actionbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="@dimen/test_parent_actionbar_button_padding"
            android:text="@string/test_parent_actionbar_text_default"
            android:textAlignment="center"
            android:textColor="@color/test_parent_color_text"
            android:textSize="@dimen/test_parent_actionbar_text_size"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/save_button"
                android:layout_width="@dimen/test_parent_actionbar_button_width"
                android:layout_height="@dimen/test_parent_actionbar_button_height"
                android:layout_marginEnd="@dimen/test_parent_actionbar_button_margin"
                android:scaleType="fitCenter"
                android:src="@drawable/actionbar_save_button"
                android:visibility="visible" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>