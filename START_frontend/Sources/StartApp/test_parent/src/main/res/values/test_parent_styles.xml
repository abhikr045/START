<resources>

    <style name="test_parent_ButtonGeneral">
        <item name="android:textColor">@color/test_parent_color_text</item>
        <item name="android:textSize">@dimen/test_parent_button_general_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">@dimen/test_parent_button_general_width</item>
        <item name="android:layout_height">@dimen/test_parent_button_general_height</item>
        <item name="android:background">@drawable/button_play</item>
    </style>

    <style name="test_parent_child_stop_ButtonGeneral">
        <item name="android:textColor">@color/test_parent_color_text</item>
        <item name="android:textSize">@dimen/test_parent_button_general_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">@dimen/test_parent_button_general_width</item>
        <item name="android:layout_height">@dimen/test_parent_button_general_height
        </item>
        <item name="android:background">@drawable/button_stop</item>
    </style>

    <style name="test_parent_ButtonQuestion">
        <item name="android:textColor">@drawable/button_question_text</item>
        <item name="android:textSize">@dimen/test_parent_button_question_text_size</item>
        <item name="android:layout_width">@dimen/test_parent_button_question_width</item>
        <item name="android:layout_height">@dimen/test_parent_button_question_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_question</item>
    </style>

    <style name="test_parent_ButtonQuestionTop">
        <item name="android:textColor">@drawable/button_question_text</item>
        <item name="android:textSize">@dimen/test_parent_button_question_text_size</item>
        <item name="android:layout_width">@dimen/test_parent_button_question_width</item>
        <item name="android:layout_height">@dimen/test_parent_button_question_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/radio_button_background_menu_top</item>
    </style>

    <style name="test_parent_ButtonQuestionBottom">
        <item name="android:textColor">@drawable/button_question_text</item>
        <item name="android:textSize">@dimen/test_parent_button_question_text_size</item>
        <item name="android:layout_width">@dimen/test_parent_button_question_width</item>
        <item name="android:layout_height">@dimen/test_parent_button_question_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/radio_button_background_menu_bottom</item>
    </style>

    <style name="test_parent_ButtonQuestionMiddle">
        <item name="android:textColor">@drawable/button_question_text</item>
        <item name="android:textSize">@dimen/test_parent_button_question_text_size</item>
        <item name="android:layout_width">@dimen/test_parent_button_question_width</item>
        <item name="android:layout_height">@dimen/test_parent_button_question_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/radio_button_background_menu_middle</item>
    </style>

    <style name="test_parent_TextViewGeneral">
        <item name="android:textSize">@dimen/test_parent_text_size_general</item>
        <item name="android:textColor">@color/test_parent_color_text_general_textView</item>
    </style>

    <style name="test_parent_SpinnerGeneral">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/test_parent_text_size_general</item>
        <item name="android:textColor">@color/test_parent_color_text_general_textView</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

</resources>
