<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.reading.start.tests.test_wheel.ui.fragments.WheelTestFragment">

        <com.reading.start.tests.test_wheel.ui.views.AutoFitTextureView
            android:id="@+id/texture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/test_wheel_color_black">

            <VideoView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:foregroundGravity="center"
                android:visibility="gone" />

            <com.reading.start.tests.test_wheel.ui.views.CompleteTriggerView
                android:id="@+id/completeTriggerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true" />

            <ImageButton
                android:id="@+id/action_button"
                style="@style/test_wheel_ButtonOrange"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_margin="24dp"
                android:clickable="true"
                android:gravity="center" />

        </RelativeLayout>
    </RelativeLayout>
</layout>
